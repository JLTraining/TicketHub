@model TicketHub.Models.Ticket

@{
    ViewData["Title"] = "Order";
}

<h3>Order Confirmation</h3>
<p>Are you sure you want to confirm your purchase of @Model.Event.Title on @Model.Event.Date? The payment amount is @Model.Price.</p>
<form method="post" asp-controller="Home" asp-action="Order" asp-route-id="@Model.Id">
    @* Form fields and submit button *@
    <button type="submit">Confirm Purchase</button>
</form>